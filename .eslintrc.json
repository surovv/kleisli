{
  "plugins": ["fp"],
  "extends": ["plugin:fp/recommended"],
  "parser": "babel-eslint",
  "env": {
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "ecmaFeatures": {
    "spread": true,
    "experimentalObjectRestSpread": true
  },
  "rules": {
    "fp/no-class": 0,
    "fp/no-this": 1,
    "fp/no-mutating-assign": 0,
    "fp/no-rest-parameters": 0,
    "fp/no-unused-expression": 1,
    "no-extra-semi": 1
  }

}
